spring.application.name=plassb-server-1
spring.output.ansi.enabled=ALWAYS
server.port=8083


# H2 Database Configuration
spring.datasource.url=jdbc:h2:file:./data/plassbdb
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=plassb-user
spring.datasource.password=plassb-pass

# H2 Console (para ver la BD en el navegador)
spring.h2.console.enabled=true

# JPA/Hibernate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.open-in-view=false